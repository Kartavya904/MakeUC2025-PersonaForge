{
  "name": "desktop",
  "version": "1.0.0",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite --config vite.config.ts",
    "assets:copy": "node -e \"const fs=require('fs'),p=require('path');const from=['electron/icon.ico','electron/iconTemplate.png'];const to='dist-electron';fs.mkdirSync(to,{recursive:true});for(const f of from){if(fs.existsSync(f))fs.copyFileSync(f, p.join(to,p.basename(f)));}\"",
    "build:renderer": "vite build --config vite.config.ts",
    "build:preload": "esbuild electron/preload.ts --platform=node --format=cjs --outfile=dist-electron/preload.cjs",
    "build:electron": "esbuild electron/main.ts --platform=node --format=esm --outfile=dist-electron/main.mjs",
    "build": "npm run build:renderer && npm run build:preload && npm run build:electron && npm run assets:copy",
    "start": "electron dist-electron/main.mjs"
  },
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.22.0",
    "@google/genai": "^1.29.0",
    "dotenv": "^17.2.3",
    "electron": "^29.4.0",
    "electron-store": "^11.0.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.12",
    "nodemon": "^3.0.2",
    "typescript": "^5.6.3",
    "vite": "^7.2.2",
    "wait-on": "^7.2.0"
  }
}
